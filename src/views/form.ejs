<%- include('header') -%>

<h1>Búa til flokk</h1>

<% if (errors.length > 0) { %>
  <div class="error-messages">
    <% errors.forEach(error => { %>
      <p style="color: red;"><%= error %></p>
    <% }) %>
  </div>
<% } %>

<form method="post" action="/form" enctype="application/x-www-form-urlencoded">
  <label for="name">Heiti flokks:</label>
  <button type="submit">Búa til flokk</button>
  
</form>

<%- include('footer') -%>